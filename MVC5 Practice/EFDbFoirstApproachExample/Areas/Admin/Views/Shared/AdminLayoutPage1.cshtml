<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a class="navbar-brand" href="#">Admin</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/categories/index">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/brands/index">Brands</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/products/index">Products</a>
                </li>               
                @if (User.Identity.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/account/logout">Logout</a>
                    </li>
                }
            </ul>
        </div>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="col-2 text-white">
                Welcome to, @User.Identity.Name
            </div>
        }

    </nav>
    <div class="container-fluid">
        <div class="row">
            @*<div class="col-1 text-white" style="background-color:#fa8405;min-height:1050px;padding:0px">
                    <div class="list-group">
                        <a href="#" class="list-group-item text-white" style="background-color:transparent">Categories</a>
                        <a href="#" class="list-group-item text-white" style="background-color:transparent">Brands</a>
                        <a href="#" class="list-group-item text-white" style="background-color:transparent">Products</a>
                        @RenderSection("SideBarOptions", required: false)
                    </div>
                </div>*@
            <div class="col-12" style="min-height:610px">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>

@model EFDbFoirstApproachExample.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Delete Product</h2>

<form action="/admin/products/delete/@Model.ProductID" method="post">
    <table class="table">
        <tr>
            <th>Product ID</th>
            <td>@Model.ProductID</td>
        </tr>
        <tr>
            <th>Product Name</th>
            <td>@Model.ProductName</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price.Value.ToString("C")</td>
        </tr>
        <tr>
            <th>Date of Purchase</th>
            <td>@Model.DateOfPurchase.Value.ToShortDateString()</td>
        </tr>
    </table>
    <div>Are you sure  you want to delete this product?</div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-danger" href="/admin/products/index">Cancel</a>
</form>



